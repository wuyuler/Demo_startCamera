<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yjt.demo_startcamera.MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startCamera"
        android:text="拍照" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_photo"
        android:layout_below="@+id/button1"
        android:layout_marginTop="37dp"
        android:onClick="startCamera2"
        android:text="拍照2" />
    <Button 
        android:id="@+id/displayImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="displayImage"
        android:text="显示本地图片"
        
        />
    <Button 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getPhotoFromAlbum"
        android:layout_below="@+id/displayImage"
        android:text="获取相册图片"
        
        />
    <ScrollView 
        android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/button2"
        >
        
    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hahaha"
        android:background="@null" 
        android:gravity="top">

        
    </EditText>
    

        
    </ScrollView>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true" />

</RelativeLayout>